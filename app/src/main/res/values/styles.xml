<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent1</item>
    </style>

    <style name="canvas_text_toolbar_button_style">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="collage_footer_imagebutton_style">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal|center</item>
        <item name="android:background">@drawable/collage_footer_button</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">@dimen/_50sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="gallery_tool_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_horizontal|clip_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="effect_footer_imagebutton_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/collage_footer_button</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:minHeight">@dimen/collage_context_button_style_min_width</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="effect_seek_bar_style">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:progress">50</item>
        <item name="android:minHeight">12dp</item>
    </style>
    <style name="effect_header_button_style">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="collage_footer_context_imagebutton_style">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal|center</item>
        <item name="android:background">@drawable/collage_footer_button_context</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="collage_ratio_button_style">
        <item name="android:textSize">@dimen/collage_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/selector_collage_ratio_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">@dimen/collage_ratio_button_width</item>
        <item name="android:layout_height">@dimen/collage_ratio_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>


</resources>
